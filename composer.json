{
    "name": "elarion/elarionstack",
    "description": "Un framework PHP moderne pour cr√©er des API expressives et maintenables",
    "keywords": ["framework", "api", "rest", "json-api", "graphql", "php"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.5",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.1",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^2.0",
        "psr/log": "^3.0",
        "nikic/fast-route": "^1.3",
        "symfony/var-dumper": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "pestphp/pest": "^3.5",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.64",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Elarion\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:unit": "pest --testsuite=Unit",
        "test:integration": "pest --testsuite=Integration",
        "test:coverage": "pest --coverage",
        "analyse": "phpstan analyse src --level=9",
        "format": "php-cs-fixer fix src",
        "format:check": "php-cs-fixer fix src --dry-run --diff",
        "quality": [
            "@analyse",
            "@format:check",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
