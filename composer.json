{
    "name": "elarion/elarionstack",
    "description": "Modern PHP framework for building expressive and maintainable APIs with support for REST, JSON:API, and GraphQL",
    "keywords": ["framework", "api", "rest", "json-api", "graphql", "php", "php8", "psr-7", "psr-11", "psr-15", "openapi", "swagger"],
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/elarion/elarionstack",
    "authors": [
        {
            "name": "ElarionStack Team",
            "email": "team@elarionstack.dev"
        }
    ],
    "require": {
        "php": "^8.4 || ^8.5",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.1",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^2.0",
        "psr/log": "^3.0",
        "nikic/fast-route": "^1.3",
        "symfony/var-dumper": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5 || ^12.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.64",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Elarion\\": "src/",
            "App\\": "app/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src --level=9",
        "format": "php-cs-fixer fix src",
        "format:check": "php-cs-fixer fix src --dry-run --diff",
        "quality": [
            "@analyse",
            "@format:check",
            "@test"
        ],
        "post-create-project-cmd": [
            "@php -r \"echo '\\nüéâ Setting up your ElarionStack project...\\n\\n';\"",
            "@php -r \"if (!is_dir('app')) { mkdir('app', 0755, true); echo '‚úì Created app/ directory\\n'; }\"",
            "@php -r \"if (!is_dir('app/Controllers')) { mkdir('app/Controllers', 0755, true); echo '‚úì Created app/Controllers/ directory\\n'; }\"",
            "@php -r \"if (!is_dir('app/Models')) { mkdir('app/Models', 0755, true); echo '‚úì Created app/Models/ directory\\n'; }\"",
            "@php -r \"if (!is_dir('app/Resources')) { mkdir('app/Resources', 0755, true); echo '‚úì Created app/Resources/ directory\\n'; }\"",
            "@php -r \"if (!is_dir('app/Middleware')) { mkdir('app/Middleware', 0755, true); echo '‚úì Created app/Middleware/ directory\\n'; }\"",
            "@php -r \"echo '\\nüìù Creating example files...\\n';\"",
            "@php -r \"if (!file_exists('app/Controllers/ExampleController.php') && file_exists('vendor/elarion/elarionstack/stubs/ExampleController.php.stub')) { copy('vendor/elarion/elarionstack/stubs/ExampleController.php.stub', 'app/Controllers/ExampleController.php'); echo '‚úì Created ExampleController.php\\n'; }\"",
            "@php -r \"if (!file_exists('routes/api.php') && file_exists('vendor/elarion/elarionstack/stubs/api.php.stub')) { copy('vendor/elarion/elarionstack/stubs/api.php.stub', 'routes/api.php'); echo '‚úì Created routes/api.php with example routes\\n'; }\"",
            "@php -r \"if (!file_exists('.env') && file_exists('.env.example')) { copy('.env.example', '.env'); echo '‚úì Created .env file from .env.example\\n'; }\"",
            "@php -r \"echo '\\nüîÑ Updating autoloader...\\n';\"",
            "@composer dump-autoload --quiet",
            "@php -r \"echo '‚úì Autoloader updated\\n';\"",
            "@php -r \"echo '\\n‚úÖ ElarionStack project ready!\\n';\"",
            "@php -r \"echo '\\nüìö Next steps:\\n';\"",
            "@php -r \"echo '  1. Configure .env file with your database credentials\\n';\"",
            "@php -r \"echo '  2. Start server: php -S localhost:8000 -t public\\n';\"",
            "@php -r \"echo '  3. Visit: http://localhost:8000/api/example\\n';\"",
            "@php -r \"echo '  4. Read docs: https://github.com/elarion/elarionstack#documentation\\n\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.4.99"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
