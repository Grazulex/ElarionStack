{
    "name": "elarion/elarionstack",
    "description": "Modern PHP framework for building expressive and maintainable APIs with support for REST, JSON:API, and GraphQL",
    "keywords": ["framework", "api", "rest", "json-api", "graphql", "php", "php8", "psr-7", "psr-11", "psr-15", "openapi", "swagger"],
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/elarion/elarionstack",
    "authors": [
        {
            "name": "ElarionStack Team",
            "email": "team@elarionstack.dev"
        }
    ],
    "require": {
        "php": "^8.4 || ^8.5",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.1",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^2.0",
        "psr/log": "^3.0",
        "nikic/fast-route": "^1.3",
        "symfony/var-dumper": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5 || ^12.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.64",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Elarion\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src --level=9",
        "format": "php-cs-fixer fix src",
        "format:check": "php-cs-fixer fix src --dry-run --diff",
        "quality": [
            "@analyse",
            "@format:check",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.4.99"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
