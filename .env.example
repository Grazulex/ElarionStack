# Project Configuration
PROJECT_NAME=elarionstack

# Application
APP_NAME=ElarionStack
APP_PORT=8000
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
# Supported: mysql, pgsql, sqlite
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=elarionstack
DB_USERNAME=root
DB_PASSWORD=

# Alternative Database Connections (uncomment to use)
# PostgreSQL
# DB_CONNECTION=pgsql
# DB_PORT=5432

# SQLite
# DB_CONNECTION=sqlite
# DB_DATABASE=/path/to/database.sqlite

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=daily

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=30
PHP_POST_MAX_SIZE=20M
PHP_UPLOAD_MAX_FILESIZE=20M

# Cache (future use)
CACHE_DRIVER=file
CACHE_PREFIX=elarionstack_cache

# Session (future use)
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue (future use)
QUEUE_CONNECTION=sync
